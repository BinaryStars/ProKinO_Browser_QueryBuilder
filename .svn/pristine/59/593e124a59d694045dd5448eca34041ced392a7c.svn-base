package edu.uga.prokino.browser;

/**
 * @author Krys J. Kochut
 *
 * An object of this class represents a mutation.
 */
public class Mutation {

    private ResourceNode mutation;
    private String       name;
    private int          startPosition;

    /**
     * Create a mutation object instance
     * @param mut a ResourceNode representing the mutation
     * @param nm the name of the mutation
     * @param startPos the starting position of the mutation (used for sorting)
     */
    public Mutation( ResourceNode mut, String nm, int startPos )
    {
	mutation = mut;
	name = nm;
	startPosition = startPos;
    }

    public ResourceNode getMutation()
    {
	return mutation;
    }

    public String getName()
    {
	return name;
    }

    public int getStartPosition()
    {
	return startPosition;
    }
}
